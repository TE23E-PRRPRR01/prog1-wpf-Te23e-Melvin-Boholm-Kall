 <Window x:Class="epostapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:epostapp"
        mc:Ignorable="d"
        Title="E-Post App" Height="450" Width="800"
        SizeToContent="WidthAndHeight">

    <StackPanel Margin="10">
    
        <Label FontWeight="Bold" FontSize="30" >Epostappen</Label>
        <StackPanel Margin="10" Orientation="Horizontal"
        
            <Label Width="120">Ange epost: </Label>
            <TextBox Width="250"></TextBox>
        
        </StackPanel>

        <StackPanel Margin="10" Orientation="Horizontal">
        
            <Label Width="120">Ange meddelanden: </Label>
            <TextBox Width="250" Height="250" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"></TextBox>
        
        </StackPanel>

        <Button Click="KlickSkicka" Margin="10" Padding="10">Skicka!</Button>
    
    </StackPanel>

</Window>
