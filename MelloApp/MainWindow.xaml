<Window x:Class="MelloApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MelloApp"
        mc:Ignorable="d"
        Title="MelloYellow" Height="450" Width="800"
        SizeToContent="WidthAndHeight">
    <StackPanel Background="#000">
        <Image Width="300" Source="bilder/melodifestivalen.png"></Image>
        <Label FontWeight="Bold" Margin="10" Foreground="#FFF">Rösta på din favoritlåt?</Label>
        <Button Name="Röd" Click="KlickRösta" Margin="10" Padding="10" Background="Red">Röd</Button>
        <Button Name="Blå" Click="KlickRösta" Margin="10" Padding="10" Background="Blue">Blå</Button>
        <Button Name="Grön" Click="KlickRösta" Margin="10" Padding="10" Background="Green">Grön</Button>
        <Button Name="Gul" Click="KlickRösta" Margin="10" Padding="10" Background="Yellow">Gul</Button>
        <Button Name="Lila" Click="KlickRösta" Margin="10" Padding="10" Background="Purple">Lila</Button>
        <Label FontWeight="Bold" Margin="10" Foreground="#FFF">Antal röster: </Label>
        <TextBox Name="txbResultat" Margin="10"></TextBox>
        <Button Name="Rensa" Click="KlickRösta" Margin="10" Padding="10" Background="White">Rensa</Button>
    </StackPanel>
</Window>
