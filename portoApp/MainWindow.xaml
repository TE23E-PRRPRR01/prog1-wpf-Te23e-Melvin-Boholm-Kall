<Window x:Class="portoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:portoApp"
        mc:Ignorable="d"
        Title="Portoräknare" Height="450" Width="800" SizeToContent="WidthAndHeight">
    <StackPanel Margin="10" Background="#EEE">
    
        <Label FontSize="24" FontWeight="Bold">Portoräknare</Label>

        <Label FontSize="16" FontWeight="Bold">Vikt (gram):</Label>
        
        <TextBox Name="txbVikt" FontSize="16" Padding="5" Margin="5"></TextBox>

        <Button FontSize="16" Padding="5" Margin="5" Click="Porto_Click">Beräkna porto</Button>

        <Label Name="lblResultat" FontSize="12" FontWeight="Bold" Margin="5" Height="50"></Label>
    
    </StackPanel>
</Window>
